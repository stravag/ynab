{
  "name": "csv-transformer",
  "version": "1.0.0",
  "description": "A simple CSV transformer website",
  "scripts": {
    "clean": "rimraf dist",
    "compile": "tsc",
    "copy:html": "cp src/index.html dist/",
    "copy:css": "cp src/styles.css dist/",
    "build": "npm run clean && npm run compile && npm run copy:html && npm run copy:css",
    "test": "ts-node src/csvTransformer.test.ts",
    "start": "npm run build && http-server dist -o"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}